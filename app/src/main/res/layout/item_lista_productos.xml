<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"

    android:backgroundTint="@color/yellow_cat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagen_item_lista"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mario2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->

            <TextView
                android:id="@+id/nombre_item_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:  Haruki Murakami"
                android:textSize="17sp"
                android:textColor="@color/white_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/descripcion_item_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/white_label"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="harukimura@cibertec.edu.pe"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/precio_item_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="harukimura@cibertec.edu.pe"
                android:textSize="17sp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="1dp"
                android:textColor="@color/white_label"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_carrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar al carrito"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>